@model EmployeePasswordVM
@{
    Layout = "_Layout2";
    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;


}
<div class="row">
    <div class="card offset-3 col-6">
        <div class="card-header text-center">Şifremi Değiştir</div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <i class="fas fa-key prefix grey-text"></i>
                    <label asp-for="OldPassword"></label>
                    <input class="form-control" asp-for="OldPassword" />
                </div>
                <div class="form-group">
                    <i class="fas fa-keybase prefix grey-text"></i>
                    <label asp-for="NewPassword"></label>
                    <input class="form-control" asp-for="NewPassword" />
                </div>
                <div class="form-group">
                    <i class="fas fa-keybase prefix grey-text"></i>
                    <label asp-for="AgainNewPassword"></label>
                    <input class="form-control" asp-for="AgainNewPassword" />
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>

    </div>
</div>
