@model AddExpenditureDocumentVM
@{
    Layout = "_Layout2";
}

<div class="container">
    <div class="row">
        <div class=" col-10">
            <h4>Harcama Belgeleri</h4>
            <div asp-validation-summary="All"></div>
        </div>
        <div class="col-2">
            <a class="" href="" data-bs-toggle="modal" data-bs-target="#AddEmploye"><i class="fas fa-plus"></i></a>
        </div>
        <div class="modal fade" id="AddEmploye" tabindex="-1" aria-labelledby="AddEmployeModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Harcama Belgesi Ekle</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/Employee/ExpenditureDocuments" id="PostMethod" enctype="multipart/form-data">
                            >
                            <div class="modal-body mx-3">
                                <div asp-validation-summary="All"></div>
                                <div class="form-group">
                                    <label asp-for="FileName"></label>
                                    <input class="form-control" asp-for="FileName">
                                </div>

                                <div class="form-group">
                                    <label asp-for="File"></label>
                                    <input type="file" asp-for="File" />
                                </div>

                                <br />


                                <div class="modal-footer d-flex justify-content-center">
                                    <button asp-route-id="@Model.ID" type="submit" class="btn btn-primary">Kaydet</button>

                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />

        @await Component.InvokeAsync("ListDocumentByExpenditure", new { id = Model.ID })


    </div>

</div>