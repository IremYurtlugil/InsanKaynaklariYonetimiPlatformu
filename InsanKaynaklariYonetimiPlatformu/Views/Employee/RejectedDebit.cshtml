@model EmployeeDebitVM
@{
    Layout = "_Layout2";
    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;

}

<div class="card">
    <div class="justify-content-center">
        <div class="card-title" asp-for="IsAproved"><b>@Model.IsAproved</b></div>
        <form method="post">
            <div asp-validation-summary="All"></div>
           
            <div class="form-group">
                <label asp-for="DebitName"></label>
                <input class="form-control" asp-for="DebitName">
            </div>
            <div class="form-group">
                <label asp-for="DescofRejec"></label>
                <input class="form-control" asp-for="DescofRejec">
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="IsAproved">İzni Onayla</label>
                        <input type="radio" asp-for="IsAproved" value="true" />
                    </div>
                    <div class="form-group ">
                        <label asp-for="IsAproved">İzni Reddet</label>
                        <input type="radio" asp-for="IsAproved" value="false" />
                    </div>
                </div>
            </div>
            <br />


            <div class="justify-content-end">
                <button asp-route-id="@Model.ID" type="submit" class="btn btn-primary">Kaydet</button>
            </div>

        </form>
        <a type="submit" asp-route-id="@Model.ID" asp-action="RejectedDebit" asp-controller="Employee" class="btn btn-danger">Sil</a>
        <a type="submit" asp-route-id="@id" asp-action="EmployeesDebit" asp-controller="Employee" class="btn btn-warning">Listeye Dön</a>
    </div>
</div>