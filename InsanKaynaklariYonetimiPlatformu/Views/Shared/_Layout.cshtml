<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsanKaynaklariYonetimiPlatformu</title>


   
    
    <link href="~/Dashboard/public/assets/css/theme.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="main" id="top">
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" data-navbar-on-scroll="data-navbar-on-scroll">
                    <div class="container">
                        <a class="navbar-brand d-flex align-items-center fw-semi-bold fs-3" href="index.html"> <img class="me-3" src="~/Dashboard/public/assets/img/gallery/logo.png" alt="navbaricon" /></a>
                        <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto pt-2 pt-lg-0 font-base">
                                <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link fw-medium active" aria-current="page" href="index.html">Musteri Deneyimleri</a></li>

                            </ul>
                            <form class="ps-lg-5">
                                <button class="btn btn-outline-primary order-0" type="submit">Login</button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>

        </div>

    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="py-0 bg-primary fixed-bottom">
            <div class="container">
                <div class="row justify-content-between pb-2 pt-8">
                    <div class="col-12 col-lg-auto mb-5 mb-lg-0">
                        <a class="d-flex align-items-center fw-semi-bold fs-3" href="#"> <img class="me-3" src="~/Dashboard/public/assets/img/gallery/footer-logo.png" alt="..."></a>
                        <p class="my-3 text-100 fw-light">Red Team<br>Kadıköy, İstanbul 34, Türkiye.</p>
                    </div>
                    <div class="col-auto mb-3">
                        <ul class="list-unstyled mb-md-4 mb-lg-0">
                            <li class="mb-3"><a class="text-100 fw-light text-decoration-none" href="#!">Hakkımızda</a></li>
                            <li class="mb-3"><a class="text-100 fw-light text-decoration-none" href="#!">Sorumluluklarımız</a></li>
                            <li class="mb-3"><a class="text-100 fw-light text-decoration-none" href="#!">Uygulamalarımız</a></li>
                            <li class="mb-3"><a class="text-100 fw-light text-decoration-none" href="#!">Bize Ulaşın</a></li>
                        </ul>
                    </div>
                   
                <div class="row">
                    <div class="col-auto mb-2">
                        <p class="mb-0 fs--1 my-2 text-100">
                            ©<svg class="bi bi-suit-heart-fill" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2b2b2b" viewBox="0 0 16 16">
                                <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"></path>
                            </svg>&nbsp;by&nbsp;<a class="text-100" href="https://akademi.bilgeadam.com/" target="_blank"> Always Red Team </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/Dashboard/public/vendors/popperjs/popper.min.js"></script>
    <script src="~/Boostrap5.1.3/js/bootstrap.min.js"></script>
    <script src="~/Dashboard/public/vendors/is/is.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/Dashboard/public/assets/js/theme.js"></script>
    <script src="~/Dashboard/public/assets/js/bootstrap-navbar.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet">



    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
