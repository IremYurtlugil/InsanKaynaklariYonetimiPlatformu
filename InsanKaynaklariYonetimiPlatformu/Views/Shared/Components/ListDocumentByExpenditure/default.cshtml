@model List<DocumentsVM>

@foreach (DocumentsVM documents in Model)
{
    <div class="col-12">
        <div class="row">
            <div class="col-9">
                <a class="btn btn-warning disabled"> <i class="fas fa-file-pdf"></i> </a>
                <a href="~/@documents.FilePath">@documents.fileName</a>
            </div>
            <div class="col-3 align-content-end">
                <a asp-controller="Employee" asp-action="DeletedDocument" asp-route-id="@documents.DocumentID">
                    <i class="btn btn-danger far fa-trash-alt"></i>
                </a>
            </div>
        </div>

    </div>

}
