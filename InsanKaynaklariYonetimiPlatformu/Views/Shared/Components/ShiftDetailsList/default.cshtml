@model List<ShiftDetailsVM>

<div asp-validation-summary="All"></div>
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>İsim Soyisim</th>
                <th>Vardiya Başlama Tarihi</th>
                <th>Vardiya Başlama Saati</th>
                <th>Mola Başlama Saati </th>
                <th>Mola Bitiş Saati</th>
                <th>Vardiya Bitiş Saati</th>
                <th>Vardiya Bitiş Tarihi</th>
                <th>Güncelle/Sil</th>


            </tr>
        </thead>
        <tbody>

            @foreach (ShiftDetailsVM item in Model)
            {
                <tr>

                    <td>@item.EmployeeFullName </td>
                    <td>@item.ShiftStartTime.ToShortDateString()</td>
                    <td>@item.ShiftStartTime.ToShortTimeString()</td>
                    <td>@item.RespiteStartTime.ToShortTimeString()</td>
                    <td>@item.RespiteFinishTime.ToShortTimeString()</td>
                    <td>@item.ShiftFinishTime.ToShortTimeString()</td>
                    <td>@item.ShiftFinishTime.ToShortDateString()</td>

                    <td>
                        <form asp-action="GetEditShiftDetails" asp-controller="Manager" asp-route-id="@item.RespiteID" method="get">
                            <input type="submit" value=" Güncelle" class="btn btn-outline-primary" /> <i class="bi bi-trash"></i>
                        </form>
                       
                        <form asp-action="DeleteShiftDetails" asp-controller="Manager" asp-route-id="@item.ShiftID" method="get">
                            <input type="submit" value="Sil" class="btn btn-danger" /> <i class="bi bi-trash"></i>
                        </form>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
