@model List<DebitVM>

<div asp-validation-summary="All"></div>
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>İsim Soyisim</th>
                <th>Zimmet Adı</th>
                <th>Zimmet Tarihi</th>
                <th>Onay Durumu</th>
                <th>Detay</th>
                <th>Red Sebebi</th>
                <th>Sil</th>


            </tr>
        </thead>
        <tbody>
            @foreach (DebitVM debitVM in Model)
            {
                <tr>
                    <td>@debitVM.EmployeeName</td>
                    <td>@debitVM.DebitName</td>
                    <td>@debitVM.StartedDate.ToShortDateString()</td>
                    <td class="text-center">
                        @if (debitVM.IsAproved == null)
                        {
                            <i class="btn btn-warning fas fa-clock disabled"></i>

                        }
                        else if (debitVM.IsAproved == true)
                        {
                            <i class="btn btn-success fas fa-check-circle disabled"></i>
                        }
                        else
                        {
                            <i class="btn btn-danger fas fa-times-circle disabled"></i>
                        }
                    </td>
                    <td>@debitVM.Details</td>
                    <td>@debitVM.DescofRejec</td>
                    <td>
                        <a asp-controller="Manager" asp-action="DeletedDebit" asp-route-id="@debitVM.ID">
                            <i class="btn btn-outline-danger far fa-trash-alt"></i>
                            @*<i class="fas fa-trash"></i>*@

                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>