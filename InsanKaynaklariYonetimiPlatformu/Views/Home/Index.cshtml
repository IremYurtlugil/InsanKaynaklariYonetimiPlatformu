@model LoginVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Giriş Yap</h4>

            </div>
            <div class="modal-body mx-3">
                <div class="md-form">
                    <i class="fas fa-envelope prefix grey-text"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>
                    <input type="email" id="defaultForm-email" class="form-control validate" placeholder="isimsoyisim@firmamaili.com">

                </div>

                <div class="md-form">
                    <i class="fas fa-lock prefix grey-text"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Şifre</label>
                    <input type="password" id="defaultForm-pass" class="form-control validate" placeholder="********">

                    <a class="text-dark" asp-controller="Manager" asp-action="Register">Üye Değilseniz Kayıt Oluşturun.</a>
                </div>
                <div class="from-check mb-3">

                    <input asp-for="IsRemember" class="from-check input" value="true" />
                    <label asp-for="IsRemember" class="from-check label text-dark"></label>
                </div>

            </div>
            
            <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Giriş</button>

            </div>
        </div>
    </div>
</div>



