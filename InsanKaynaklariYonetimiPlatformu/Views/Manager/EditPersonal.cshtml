@model Employee
@{ 
    Layout = "_Layout2";

}
<div class="card justify-content-center">
    
    <div class="card-body">
        <form method="POST">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="FullName"><i class="fas fa-id-card"></i></label>
                <input asp-for="FullName" />
            </div>
            <div class="form-group">
                <label asp-for="Status"><i class="fas fa-briefcase"></i></label>
                <input asp-for="Status" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDay"><i class="fas fa-birthday-cake"></i></label>
                <input asp-for="BirthDay" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate"><i class="fas fa-calendar"></i></label>
                <input asp-for="StartDate" />
            </div>
            <div class="form-group">
                <label asp-for="Salary"><i class="fas fa-money-bill-wave"></i></label>
                <input asp-for="Salary" />
            </div>

            <div class="form-group form-button">
                <input type="submit" asp-route-id="@Model.EmployeeId" class="form-submit" value="Kaydet" />
            </div>

        </form>
    </div>
</div>
