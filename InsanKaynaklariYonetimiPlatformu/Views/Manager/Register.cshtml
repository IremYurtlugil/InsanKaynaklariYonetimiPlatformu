@model ManagerRegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="container pt-7">
    <div class="row justify-content-center ">
        <div class="col-8 ">
            <div class="card mt-4">
                <div class="card-header fs-4 text-center"> Kayıt Ol</div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label"></label>
                            <input asp-for="CompanyName" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ManagerFullName" class="form-label"></label>
                            <input asp-for="ManagerFullName" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="ManagerMail" class="form-label"></label>
                            <input asp-for="ManagerMail" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="ManagerPassword" class="form-label"></label>
                            <input asp-for="ManagerPassword" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Üyelik Türü</label>
                            <br />
                            <div class="form-check form-check-inline">
                                <input asp-for="Membership" class="form-check-input" type="radio" value="1" checked>
                                <label class="form-check-label">Aylık</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Membership" class="form-check-input" type="radio" value="2" checked>
                                <label class="form-check-label">Yıllık</label>
                            </div>
                        </div>
                        <div class="mb-3 alert-danger text-sm-center" asp-validation-summary="All"></div>
                        <button type="submit" class="btn btn-primary">Kayıt Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>