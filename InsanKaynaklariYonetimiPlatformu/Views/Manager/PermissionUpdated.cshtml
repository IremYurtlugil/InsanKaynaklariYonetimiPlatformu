@model PermissionVM
@{
    Layout = "_Layout2";
    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;

}

<div class="card">
    <div class="justify-content-center"> 
        <div class="card-title" asp-for="FullName"><b>@Model.FullName</b></div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label class="form-group">İzin Türü</label>
                <div class="form-group">
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="PermissionType">Yıllık İzin</label>
                            <input type="radio" asp-for="PermissionType" value="1" />
                        </div>
                        <div class="form-group ">
                            <label asp-for="PermissionType">Doğum İzni</label>
                            <input type="radio" asp-for="PermissionType" value="2" />
                        </div>
                        <div class="form-group ">
                            <label asp-for="PermissionType">Babalık İzni</label>
                            <input type="radio" asp-for="PermissionType" value="3" />
                        </div>
                        <div class="form-group ">
                            <label asp-for="PermissionType">Ücretsiz İzin</label>
                            <input type="radio" asp-for="PermissionType" value="4" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input class="form-control" asp-for="StartDate">
            </div>
            <div class="form-group">
                <label asp-for="FinishDate"></label>
                <input class="form-control" asp-for="FinishDate">
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="IsAproved">İzni Onayla</label>
                        <input type="radio" asp-for="IsAproved" value="true" />
                    </div>
                    <div class="form-group ">
                        <label asp-for="IsAproved">İzni Reddet</label>
                        <input type="radio" asp-for="IsAproved" value="false" />
                    </div>
                </div>
            </div>
            <br />


            <div class="justify-content-end">
                <button asp-route-id="@Model.ID" type="submit" class="btn btn-primary">Kaydet</button>
            </div>

        </form>
        <a type="submit" asp-route-id="@Model.ID" asp-action="DeletedPermission" asp-controller="Manager" class="btn btn-danger">Sil</a>
        <a type="submit" asp-route-id="@id" asp-action="EmployeesPermissionRequest" asp-controller="Manager" class="btn btn-warning">Listeye Dön</a>
    </div>
</div>