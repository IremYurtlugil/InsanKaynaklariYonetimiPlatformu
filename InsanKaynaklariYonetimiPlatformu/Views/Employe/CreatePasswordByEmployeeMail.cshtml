@model RegisterEmployeeVM

<div class="card">
    <form method="POST" class="register-form">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Password"><i class="fas fa-key"></i></label>
            <input asp-for="Password"  />
        </div>
        <div class="form-group">
            <label asp-for="AgainPassword"><i class="fas fa-key"></i></label>
            <input asp-for="AgainPassword" />
        </div>
     
        <div class="form-group form-button">
            <input type="submit" asp-route-id="@Model.ID" />
        </div>

    </form>
</div>