@model List<AdminPassiveCompanyVM>
@{
    ViewData["Title"] = "Pasif Kullanıcılar";
    Layout = "_Layout2";


}

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Firma Adı</th>
                <th>Firma Mail Uzantısı</th>
                <th>Yönetici Adı Soyadı</th>
                <th>Yönetici Maili</th>
                <th>Kayıt Türü</th>
                <th>Onayla</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>

            @foreach (AdminPassiveCompanyVM companyVM in Model)
            {
            <tr>

                <td>@companyVM.CompanyName</td>
                <td>@companyVM.Mailextension</td>
                <td>@companyVM.ManagerFullName</td>
                <td>@companyVM.ManagerMail</td>
                <td>@companyVM.membershipType</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-outline-danger btn-sm" asp-action="Activate" asp-route-id="@companyVM.CompanyId">Onayla</a>
                    </div>
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-outline-warning btn-sm" asp-action="DeleteCompany" asp-route-id="@companyVM.CompanyId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>